{% extends 'bars.html.twig' %}

{% set title = "Listado de proveedores"  %}
{% block title %}{{ title }}{% endblock %}

{% block contenpage %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h5>
                </h5>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>
                            {{ title }}</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a href="{{ path('app_new_provider') }}" class="btn btn-success">Nuevo</a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <table id="example" class="display table table-striped table-bordered dataminetables">
                                <thead>
                                <th><input type="checkbox" id="select_all" name="select_all"></th>
                                <th>Nombre</th>
                                <th>Contacto</th>
                                <th>Mail</th>
                                <th>Editar</th>
                                <th>Borrar</th>
                                </thead>
                                <tbody>
                                {% for provider in providers  %}
                                    <tr>

                                        <td><input type="checkbox" class="chkgrp" name="chkgrp[]" value="{{provider.id }}"></td>

                                        <td>{{ provider.name }}</td>
                                        <td>{{ provider.contact}}</td>
                                        <td>{{ provider.email }}</td>
                                        <td><a class="btn btn-primary" href="{{ path('app_provider_edit',{"id":provider.id}) }}"><i class="fa fa-edit"></i></a></td>
                                        <td><a href="{{ path('app_provider_delete', {'id': provider.id}) }}" class="btn btn-danger disable-btn del-link" type="submit" ><i class="fa fa-trash"></i></a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}